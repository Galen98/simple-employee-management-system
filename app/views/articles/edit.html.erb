<main role="main" class="container text-center">
<h1 style="margin-top: 50px;margin-bottom:50px;">Update a Article</h1>
<%= form_with model: @article do |form| %>
    <div class="form-group">
  <%= form.text_field :title, placeholder: "Title", class: 'form-control', required: true %>
  </div>
  <div class="form-group">
  <%= form.text_area :content, placeholder: "Content", class: 'form-control', required: true, style: 'height:200px;' %>
  </div>
  <%= form.submit "Update Article", class: 'btn btn-primary',style: "margin-top: 50px;margin-bottom:50px;" %>
<% end %>
</main>
